<extension type="module" version="3.0" client="site" method="upgrade">
	<name>Laterales Jorge</name>
	<author>Uniandes</author>
	<creationDate>August 2018</creationDate>
	<copyright>Copyright (c) 2018 laterales_jorge. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<version>1.0.0</version>
	<description>
	<![CDATA[
	<p><span style="font-size: 11.0pt; line-height: 107%; font-family: 'Calibri',sans-serif; mso-ascii-theme-font: minor-latin; mso-fareast-font-family: Calibri; mso-fareast-theme-font: minor-latin; mso-hansi-theme-font: minor-latin; mso-bidi-font-family: 'Times New Roman'; mso-bidi-theme-font: minor-bidi; mso-ansi-language: ES-CO; mso-fareast-language: EN-US; mso-bidi-language: AR-SA;">MÃ³dulo de los laterales para la pagina</span></p>
	]]>
	</description>

	<files>
		<filename module="mod_laterales_jorge">mod_laterales_jorge.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>correo.php</filename>
		<filename>califica.php</filename>
		<filename>php.ini</filename>
		<folder>tmpl</folder>
		<folder>recursos</folder>
	</files>

	<languages>
		<language tag="en-GB">en-GB.mod_laterales_jorge.ini</language>
		<language tag="en-GB">en-GB.mod_laterales_jorge.sys.ini</language>
		<language tag="es-ES">es-ES.mod_laterales_jorge.ini</language>
		<language tag="es-ES">es-ES.mod_laterales_jorge.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">

				<field
					name="correo"
					type="email"
					label="Correo"
					description="Correo donde llegaran las notificaciones"
					filter="safehtml"
					cols="30"
					rows="5"
				/>


			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
				>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>